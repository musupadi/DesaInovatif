<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/gradient_background">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/boy"
                        android:id="@+id/ivProfile"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Muhammad Supriyadi"
                        android:gravity="center"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:id="@+id/tvNama"
                        android:textSize="@dimen/header_text"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="musupadi"
                        android:gravity="center"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:id="@+id/tvUsername"
                        android:textSize="@dimen/header_text_smoll"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="250dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/half_top_round">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="30dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/gotham"
                            android:layout_marginTop="40dp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/gotham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="musupadi"
                            android:id="@+id/tvUsername2"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/Black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/Black"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/gotham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginTop="40dp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/gotham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="musupadi159@gmail.com"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:id="@+id/tvEmail"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/Black"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/gotham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Telpon"
                            android:layout_marginTop="40dp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/gotham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123456"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:id="@+id/tvNoTelpon"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/Black"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:background="@drawable/rounded_menu"
                        android:text="Ubah Password"
                        android:id="@+id/btnUbahPassword"
                        android:textColor="@color/White" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginBottom="100dp"
                        android:background="@drawable/rounded_menu"
                        android:text="Logout"
                        android:id="@+id/btnLogot"
                        android:textColor="@color/White" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>