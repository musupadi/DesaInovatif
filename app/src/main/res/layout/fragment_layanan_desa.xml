<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="80dp">
    <TextView
        android:layout_width="0.0001dp"
        android:layout_height="0.0001dp"
        android:id="@+id/tvKat"
        android:text="1"/>
    <TextView
        android:layout_width="0.0001dp"
        android:layout_height="0.0001dp"
        android:id="@+id/tvSub"
        android:text="1"/>
    <TextView
        android:layout_width="0.0001dp"
        android:layout_height="0.0001dp"
        android:id="@+id/tvBersangkutan"
        android:text="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:elevation="10dp"
            android:visibility="gone">
            <Spinner
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/Surat"
                android:id="@+id/spinner"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_menu"
            android:layout_margin="10dp"
            android:id="@+id/btnPermintaan"
            android:text="Permintaan Surat"
            android:textColor="@color/White"
            android:fontFamily="@font/gotham"
            android:elevation="10dp"/>
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pengajuan"
                        android:textColor="@color/Orange"
                        android:textStyle="bold"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textColor="@color/Orange"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permintaan Surat Masih dalam Tahap Menunggu di Proses Oleh Desa"
                        android:textColor="@color/Orange"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Terproses"
                        android:textColor="@color/Primary"
                        android:textStyle="bold"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textColor="@color/Primary"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permintaan sudah selesai di proses oleh Desa, mohon segera datang ke kantor desa untuk mengambil surat"
                        android:textColor="@color/Primary"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Selesai"
                        android:textColor="@color/BlueSky"
                        android:textStyle="bold"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textColor="@color/BlueSky"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permintaan surat sudah diterima oleh user"
                        android:textColor="@color/BlueSky"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ditolak"
                        android:textColor="@color/Red"
                        android:textStyle="bold"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textColor="@color/Red"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permintaan ditolak oleh kantor desa"
                        android:textColor="@color/Red"
                        android:fontFamily="@font/gotham"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_primary"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearPengajuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_rounded_secondary"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pengajuan"
                    android:textColor="@color/White"
                    android:fontFamily="@font/gotham"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearTerproses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Terproses"
                    android:textColor="@color/White"
                    android:fontFamily="@font/gotham"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearSelesai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Selesai"
                    android:textColor="@color/White"
                    android:fontFamily="@font/gotham"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDitolak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ditolak"
                    android:textColor="@color/White"
                    android:fontFamily="@font/gotham"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>